---
const {title} = Astro.props;
import "../styles/global.css";

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<body class="pb-10">

<div class="flex justify-center py-2">
    <div>
        {currentPath !== "/" && 
            <a href="/" class="btn btn-sm lg:btn-base btn-link no-underline text-xl">∅</a>
        }
    </div>
</div>

<article class="prose lg:prose-base mx-auto max-w-screen-lg lg:px-4 px-3">

    <slot/>
</article>



</body>
</html>

<style>
    /* Обработка длинных ссылок */
    a {
        word-wrap: break-word;
        overflow-wrap: break-word;
        word-break: break-word;
        hyphens: auto;
    }

    /* Убедимся, что контент не выходит за пределы контейнера */
    article {
        overflow-wrap: break-word;
        word-wrap: break-word;
        max-width: 100%;
        overflow-x: hidden;
    }

    /* Правила для изображений */
    img {
        max-height: 100%;
        object-fit: contain;
        flex-shrink: 0;
    }

    /* Правила для прокручиваемых flex-контейнеров */
    .flex, div[class*="flex"] {
        display: flex;
        overflow-x: auto;
        flex-wrap: nowrap;
        padding-bottom: 10px;
        max-width: 100%;
        scrollbar-width: thin;
        -webkit-overflow-scrolling: touch;
    }

    /* Стили для скроллбара */
    .flex::-webkit-scrollbar, div[class*="flex"]::-webkit-scrollbar {
        height: 4px;
    }
    
    .flex::-webkit-scrollbar-track, div[class*="flex"]::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    
    .flex::-webkit-scrollbar-thumb, div[class*="flex"]::-webkit-scrollbar-thumb {
        background: #888;
    }

    /* Правила для всех потенциальных контейнеров изображений */
    div {
        max-width: 100%;
        overflow-wrap: break-word;
    }
</style>
